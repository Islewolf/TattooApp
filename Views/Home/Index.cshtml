@{
    Layout = "_Layout";
}

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">Artists</h5>
                <p class="card-text display-4">@ViewBag.ArtistCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Total Appointments</h5>
                <p class="card-text display-4">@ViewBag.TotalAppointments</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">Today</h5>
                <p class="card-text display-4">@ViewBag.TodayAppointments.Count</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-secondary">
            <div class="card-body">
                <h5 class="card-title">Upcoming</h5>
                <p class="card-text display-4">@ViewBag.UpcomingAppointments.Count</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h4>Today's Appointments</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.TodayAppointments.Count == 0)
                {
                    <p class="text-muted">No appointments today</p>
                }
                else
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Client</th>
                                <th>Artist</th>
                                <th>Duration</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var apt in ViewBag.TodayAppointments)
                            {
                                <tr>
                                    <td>@apt.AppointmentDate.ToString("HH:mm")</td>
                                    <td>@apt.ClientName</td>
                                    <td>@apt.Artist.Name</td>
                                    <td>@apt.DurationMinutes min</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4>Upcoming Appointments</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.UpcomingAppointments.Count == 0)
                {
                    <p class="text-muted">No upcoming appointments</p>
                }
                else
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Artist</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var apt in ViewBag.UpcomingAppointments)
                            {
                                <tr>
                                    <td>@apt.AppointmentDate.ToString("MMM dd, HH:mm")</td>
                                    <td>@apt.ClientName</td>
                                    <td>@apt.Artist.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Artist" asp-action="Index" class="btn btn-primary">Manage Artists</a>
    <a asp-controller="Appointment" asp-action="Index" class="btn btn-success">Manage Appointments</a>
</div>
