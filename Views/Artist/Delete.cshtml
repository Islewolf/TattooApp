@model TattooApp.Models.Artist

<h2>Delete Artist</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this artist?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            
            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>
            
            <dt class="col-sm-3">Appointments</dt>
            <dd class="col-sm-9">
                <span class="badge bg-warning">@Model.Appointments.Count appointments will be affected</span>
            </dd>
        </dl>
        
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.ArtistId" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

