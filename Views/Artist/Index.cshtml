@model IEnumerable<TattooApp.Models.Artist>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Artists</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Artist</a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th>Specialties</th>
                    <th>Appointments</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var artist in Model)
                {
                    <tr>
                        <td>@artist.Name</td>
                        <td>@artist.Email</td>
                        <td>@artist.Phone</td>
                        <td>@artist.Role</td>
                        <td>
                            @if (artist.Specialties.Any())
                            {
                                @string.Join(", ", artist.Specialties.Select(s => s.Name))
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info">@artist.Appointments.Count</span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@artist.ArtistId" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@artist.ArtistId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@artist.ArtistId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

